        "default":"akv",
        "validation":[
            "required",
            "max:5"
        ]
    },
    {
        "id":"akv_zones",
        "type":"multi",
        "label":"Zones",
        "description":"The zones for your Azure Key Vault",
        "options": [
            {
                "label": "One",
                "value": 1
            },
            {
                "label": "Two",
                "value": 2
            },
            {
                "label": "Three",
                "value": 3
            },
            {
                "label": "Four",
                "value": 4
            }
